{% extends 'base.html.twig' %}
{% block body %}
{% include 'partials/header.html.twig' %}
    <div id="content">
        <div class="content-box container">
            <div style="width: 400px; margin: 0 auto; border-radius: 30px; padding: 30px; margin-top: 120px; margin-bottom: 120px; background-color: #F45B69">
                <h2 style="text-align: center; font-family: europa;">Klantregistratie</h2>
                {% if usernameBezet is defined %}
                    <div class="error" style="background-color: white; border-radius: 15px; line-height: 30px; text-align: center; margin-top: 15px; margin-bottom: 15px;">
                        {% if usernameBezet %}
                            <i class="fas fa-exclamation-triangle" style="color: #E3656C;"></i> De gekozen gebruikersnaam is bezet<ingevult></ingevult>
                        {% endif %}
                    </div>
                {% endif %}
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.email, { 'attr': { 'class': 'form-control' } }) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.username, { 'attr': { 'class': 'form-control' } }) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.plainPassword) }}
                </div>
                <div class="form-group">
                    <button style="font-family: proxima-nova;" type="submit" class="form-control"><i class="fas fa-user"></i> Registreren</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% include 'partials/footer.html.twig' %}
{% endblock %}