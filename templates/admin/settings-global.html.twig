{% extends 'base.html.twig' %}
{% block body %}
{% include 'partials/header.html.twig' %}
<div id="content">
    <div class="content-box container">
        <div class="row">
            <h2 class="col-md-6" style="font-family: europa;">Actieperiodes</h2>
            <div class="col-md-6" style="display: flex; justify-content: flex-end; align-items: center; height: 80px;">
                <a href="{{ path('admin_add_discount') }}">
                    <div class="btn btn-primary" style="font-family: proxima-nova;">
                        <i class="fas fa-plus-square"></i> Nieuw periode
                    </div>
                </a>
            </div>
        </div>
        {% if error is defined %}
            {{ error }}
        {% endif %}
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Periode start</th>
                <th scope="col">Periode eind</th>
                <th scope="col">Actiepercentage</th>
                <th scope="col">Acties</th>
            </tr>
            </thead>
            <tbody>
            {% for discount in discounts %}
                <tr>
                    <th scope="row">{{ discount.id }}</th>
                    <td>{{ discount.actiePeriodeStart|date("d/m/Y") }}</td>
                    <td>{{ discount.actiePeriodeEinde|date("d/m/Y") }}</td>
                    <td>{{ (discount.actiePercentage * 100) }}%</td>
                    <td>
                        <a href="{{ path('admin_edit_discount', { 'id': discount.id }) }}" style="text-decoration: none;">
                            <i class="fas fa-edit"></i> Bewerken
                        </a>
                        <a href="{{ path('admin_delete_discount', { 'id': discount.id }) }}" style="text-decoration: none;">
                            <i style="margin-left: 15px;" class="fas fa-trash-alt"></i> Verwijderen
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% include 'partials/footer.html.twig' %}
{% endblock %}