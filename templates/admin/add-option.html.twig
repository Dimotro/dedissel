{% extends 'base.html.twig' %}
{% block body %}
    {% include 'partials/header.html.twig' %}
    <div id ="contact">
        <div class="content-box container">
            <div style="width: 500px; padding: 30px; border-radius: 30px; background-color: #F45B69; margin: 0 auto; margin-top: 40px; margin-bottom: 60px;">
                <div class="row">
                    <h3 class="col-md-6" style="font-family: europa; color: white;">Optie toevoegen</h3>
                    <div class="col-md-6" style="display: flex; justify-content: flex-end; align-items: center; height: 80px;">
                        <a href="{{ path('admin_overview_option') }}">
                            <div class="btn btn-primary" style="font-family: proxima-nova; border-radius: 20px;">
                                <i class="far fa-reply"></i> Terug
                            </div>
                        </a>
                    </div>
                </div>
                <div style="padding: 30px;">
                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_row(form.optieTitel) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.optieOmschrijving) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.optiePrijs) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.fotos) }}
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Toevoegen" class="btn btn-primary form-control" style="border-radius: 30px; width: 60%; margin: 0 auto; display: block; margin-top: 30px;">
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    {% include 'partials/footer.html.twig' %}
{% endblock %}