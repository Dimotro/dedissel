{% extends '/base.html.twig' %}
{% block body %}
    {% include '/partials/header.html.twig' %}
    <div id="content">
        <div class="content-box container">
            <div style="max-width: 400px; margin: 0 auto; padding: 30px; border-radius: 30px; background-color: #F45B69" class="default-form">
                <h2 style="text-align: center; font-family: europa; margin-bottom: 30px;"><i class="far fa-address-card"></i> Rijbewijs aanpassen</h2>
                <h4 style="text-align: center; font-family: proxima-nova;">Elke aanpassing wordt gecontroleerd bij het ophalen van uw bestelling!</h4>
                {{ form_start(form) }}
                <div class="row">
                    <div class="form-group">
                        {{ form_errors(form) }}
                    </div>
                    <div class="form-group" style="padding: 0 45px;">
                        {{ form_row(form.rijbewijsnummer) }}
                    </div>
                    <div class="form-group" style="padding: 0 45px;">
                        <label class="" style="font-family: proxima-nova;">Rijbewijs-type</label>
                        {{ form_row(form.rijbewijsA) }}
                        {{ form_row(form.rijbewijsA1) }}
                        {{ form_row(form.rijbewijsA2) }}
                        {{ form_row(form.rijbewijsAM) }}
                        {{ form_row(form.rijbewijsB) }}
                        {{ form_row(form.rijbewijsBE) }}
                        {{ form_row(form.rijbewijsBPlus) }}
                        {{ form_row(form.rijbewijsC) }}
                        {{ form_row(form.rijbewijsC1) }}
                        {{ form_row(form.rijbewijsCE) }}
                        {{ form_row(form.rijbewijsC1E) }}
                        {{ form_row(form.rijbewijsD) }}
                        {{ form_row(form.rijbewijsDE) }}
                        {{ form_row(form.rijbewijsD1) }}
                        {{ form_row(form.rijbewijsD1E) }}
                        {{ form_row(form.rijbewijsT) }}
                    </div>
                    <div class="form-group" style="padding: 0 45px;">
                        {{ form_row(form.rijbewijsGeldigtot) }}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="default-button-wide btn btn-primary" style="width: 60%;"><span class="fa-fw"><i class="fas fa-shield-check fa-2x" style="height:20px;"></i> Bevestigen</span></button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    {% include '/partials/footer.html.twig' %}
{% endblock %}